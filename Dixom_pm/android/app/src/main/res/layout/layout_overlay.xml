<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/overlayContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#CC131212"
        android:padding="50dp"
        android:minWidth="220dp"
        android:minHeight="160dp">

        <!-- Иконка громкости -->
        <ImageView
            android:id="@+id/volumeIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@android:drawable/ic_lock_silent_mode_off"
            android:tint="#01C4FF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Текст громкости -->
        <TextView
            android:id="@+id/VolumeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Громкость: 20"
            android:textAlignment="center"
            android:textColor="#01C4FF"
            android:textSize="38sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/volumeIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="12dp"/>

        <!-- Прогресс громкости -->
        <ProgressBar
            android:id="@+id/volumeProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:max="60"
            android:progress="20"
            android:progressTint="#01C4FF"
            android:backgroundTint="#33FFFFFF"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/VolumeText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
